<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
             <solid android:color="@color/blue_bright"/>
             <padding
			    android:bottom="4dp"
			    android:left="14dp"
			    android:right="14dp"
			    android:top="4dp" />
             <corners
                android:radius="2dp" />
             <stroke
			    android:width="1dp"
			    android:color="#a000" />
        </shape>
    </item>
    <item android:state_focused="true">
         <shape>
             <solid android:color="@color/blue_light"/>
             <padding
			    android:bottom="0dp"
			    android:left="10dp"
			    android:right="10dp"
			    android:top="0dp" />
             <corners
                android:radius="2dp" />
             <stroke
			    android:width="5dp"
			    android:color="@color/blue_bright" />
        </shape>
    </item>
    <item>
         <shape>
            <solid android:color="#afff"/>
            <padding
			    android:bottom="4dp"
			    android:left="14dp"
			    android:right="14dp"
			    android:top="4dp" />
             <corners
                android:radius="2dp" />
             <stroke
			    android:width="1dp"
			    android:color="#a000" />
        </shape>
    </item>
</selector>